                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/userName5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:text="c*****n"
                            android:textSize="8sp" />

                        <RatingBar
                            android:id="@+id/reviewRate5"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_below="@id/userName5"
                            android:numStars="5"
                            android:rating="5"
                            android:theme="@style/RatingBar" />

                        <TextView
                            android:id="@+id/userReview5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/reviewRate5"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/abeezee"
                            android:text="@string/review5"
                            android:textColor="@color/grey_3"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/reviewImg3"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_below="@id/userReview5"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/review_img_3" />

                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:id="@+id/reviewLine5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey" />

                <RelativeLayout
                    android:id="@+id/review6Container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="17dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/user_profile_6"
                        android:id="@+id/userProfile6" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/userProfile6"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/userName6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:text="k*****g"
                            android:textSize="8sp" />

                        <RatingBar
                            android:id="@+id/reviewRate6"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_below="@id/userName6"
                            android:numStars="5"
                            android:rating="5"
                            android:theme="@style/RatingBar" />

                        <TextView
                            android:id="@+id/userReview6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/reviewRate6"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/abeezee"
                            android:text="@string/review6"
                            android:textColor="@color/grey_3"
                            android:textSize="12sp" />

                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:id="@+id/reviewLine6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey" />

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>