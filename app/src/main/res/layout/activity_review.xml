                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/userName4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:text="l*****y"
                            android:textSize="8sp" />

                        <RatingBar
                            android:id="@+id/reviewRate4"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_below="@id/userName4"
                            android:numStars="5"
                            android:rating="4.5"
                            android:theme="@style/RatingBar" />

                        <TextView
                            android:id="@+id/userReview4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/reviewRate4"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/abeezee"
                            android:text="@string/review4"
                            android:textColor="@color/grey_3"
                            android:textSize="12sp" />

                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:id="@+id/reviewLine4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey" />

                <RelativeLayout
                    android:id="@+id/review5Container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="17dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/user_profile_5"
                        android:id="@+id/userProfile5" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
