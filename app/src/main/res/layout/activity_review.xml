<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReviewActivity">

    <RelativeLayout
        android:id="@+id/reviewRelLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15dp">

        <RelativeLayout
            android:id="@+id/reviewSubContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="22dp"
            android:paddingRight="22dp">

            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back_arrow_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/alata"
                android:text="Reviews"
                android:textSize="23sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <View
            android:id="@+id/reviewLine0"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/reviewSubContainer"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="22dp"
            android:background="@color/grey" />

        <ScrollView
            android:id="@+id/reviewScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reviewLine0">

            <LinearLayout
                android:id="@+id/reviewContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="22dp"
                android:paddingTop="15dp"
                android:paddingRight="22dp"
                android:paddingBottom="25dp">


                <RelativeLayout
                    android:id="@+id/review1Container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="17dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/user_profile_1"
                        android:id="@+id/userProfile1" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/userProfile1"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:text="i*****7"
                            android:textSize="8sp"
                            android:id="@+id/userName1" />

                        <RatingBar
                            android:id="@+id/reviewRate1"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/userName1"
                            android:layout_marginTop="3dp"
                            android:numStars="5"
                            android:rating="5"
                            android:theme="@style/RatingBar" />

                        <TextView
                            android:id="@+id/userReview1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/reviewRate1"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/abeezee"
                            android:textColor="@color/grey_3"
                            android:text="@string/review1"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/reviewImg1_1"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_below="@id/userReview1"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/review_img_1_1" />

                        <ImageView
                            android:id="@+id/reviewImg1_2"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_below="@id/userReview1"
                            android:layout_toRightOf="@id/reviewImg1_1"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/review_img_1_2" />

                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:id="@+id/reviewLine1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey" />

                <RelativeLayout
                    android:id="@+id/review2Container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="17dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/user_profile_2"
                        android:id="@+id/userProfile2" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/userProfile2"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/userName2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:text="n*****h"
                            android:textSize="8sp" />

                        <RatingBar
                            android:id="@+id/reviewRate2"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_below="@id/userName2"
                            android:numStars="5"
                            android:rating="4"
                            android:theme="@style/RatingBar" />

                        <TextView
                            android:id="@+id/userReview2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/reviewRate2"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/abeezee"
                            android:text="@string/review2"
                            android:textColor="@color/grey_3"
                            android:textSize="12sp" />

                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:id="@+id/reviewLine2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey" />

                <RelativeLayout
                    android:id="@+id/review3Container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="17dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/user_profile_3"
                        android:id="@+id/userProfile3" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/userProfile3"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/userName3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:text="m*****2"
                            android:textSize="8sp" />

                        <RatingBar
                            android:id="@+id/reviewRate3"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_below="@id/userName3"
                            android:numStars="5"
                            android:rating="5"
                            android:theme="@style/RatingBar" />

                        <TextView
                            android:id="@+id/userReview3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/reviewRate3"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/abeezee"
                            android:text="@string/review3"
                            android:textColor="@color/grey_3"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/reviewImg2"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_below="@id/userReview3"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/review_img_2" />

                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:id="@+id/reviewLine3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey" />

                <RelativeLayout
