<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    tools:context=".AddressActivity2">

    <RelativeLayout
        android:id="@+id/addressDetailHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="22dp"
        android:paddingRight="22dp">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back_arrow_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/alata"
            android:text="Address 1"
            android:textSize="23sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:id="@+id/addressDetailLine0"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/addressDetailHeader"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="22dp"
        android:background="@color/grey" />

    <ScrollView
        android:id="@+id/addressDetailScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addressDetailLine0">

        <LinearLayout
            android:id="@+id/addressDetailContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="22dp"
            android:paddingTop="15dp"
            android:paddingRight="22dp"
            android:paddingBottom="25dp">

            <RelativeLayout
                android:id="@+id/firstNameContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/firstNameHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:text="First Name"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/firstNameTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/firstNameHeader"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/edit_text_field_bg"
                    android:fontFamily="@font/alata"
                    android:hint="eg. John"
                    android:inputType="text"
                    android:paddingLeft="16dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:text="Kai Leon"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lastNameContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp">

                <TextView
                    android:id="@+id/lastNameHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:text="Last Name"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/lastNameTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lastNameHeader"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/edit_text_field_bg"
                    android:fontFamily="@font/alata"
                    android:hint="eg. Smith"
                    android:inputType="text"
                    android:paddingLeft="16dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:text="Yoong"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/phoneContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp">

                <TextView
                    android:id="@+id/phoneHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:text="Phone"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/phoneTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/phoneHeader"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/edit_text_field_bg"
                    android:fontFamily="@font/alata"
                    android:hint="eg. 0123456789"
                    android:inputType="text"
                    android:paddingLeft="16dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:text="0105641090"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/addressLine1Container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp">

                <TextView
                    android:id="@+id/addressLine1Header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:text="Address Line 1"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/addressLine1Txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/addressLine1Header"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/edit_text_field_bg"
                    android:fontFamily="@font/alata"
                    android:inputType="text"
                    android:paddingLeft="16dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:text="51, Persiaran Tunku SS 2/31"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/addressLine2Container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp">

                <TextView
                    android:id="@+id/addressLine2Header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:text="Address Line 2 (optional)"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/addressLine2Txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/addressLine2Header"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/edit_text_field_bg"
                    android:fontFamily="@font/alata"
                    android:inputType="text"
                    android:paddingLeft="16dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/addressLine3Container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp">

                <TextView
                    android:id="@+id/addressLine3Header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:text="Address Line 3 (optional)"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/addressLine3Txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/addressLine3Header"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/edit_text_field_bg"
                    android:fontFamily="@font/alata"
                    android:inputType="text"
                    android:paddingLeft="16dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cityContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp">

                <TextView
                    android:id="@+id/cityHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:text="City"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/cityTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cityHeader"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/edit_text_field_bg"
                    android:fontFamily="@font/alata"
                    android:inputType="text"
                    android:paddingLeft="16dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:text="Petaling Jaya"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/stateContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp">

                <TextView
                    android:id="@+id/stateHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:text="State"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/stateTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/stateHeader"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/edit_text_field_bg"
                    android:fontFamily="@font/alata"
                    android:inputType="text"
                    android:paddingLeft="16dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:text="Selangor"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/postalCodeContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp">

                <TextView
                    android:id="@+id/postalCodeHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:text="Postal Code"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/postalCodeTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/postalCodeHeader"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/edit_text_field_bg"
                    android:fontFamily="@font/alata"
                    android:inputType="text"
                    android:paddingLeft="16dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:text="46100"
                    android:textSize="15sp" />

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/updateAddressBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:background="@drawable/my_button_bg"
                android:fontFamily="@font/alata"
                android:text="Update Address"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>